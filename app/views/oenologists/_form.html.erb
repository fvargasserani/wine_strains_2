<%= form_with(model: oenologist, local: true) do |form| %>
  <% if oenologist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(oenologist.errors.count, "error") %> prohibited this oenologist from being saved:</h2>

      <ul>
        <% oenologist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :nationality %>
    <%= form.text_field :nationality %>
  </div>

  <div id='magazine_oenologists'>
    <%= form.fields_for :magazine_oenologists do |magazine_oenologist_form| %>
      <%= render 'magazine_oenologist_fields', :f => magazine_oenologist_form %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add magazines', form, :magazine_oenologists %>
    </div>
  </div> 


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
