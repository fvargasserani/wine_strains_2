<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Strains</th>
      <th>Grades</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.year %></td>
        <td><%= @wine_strains.each do |strain_info| %>
          <%= strain_info.name.sort %><%= strain_info.percentage %>
        <% end %></td>
        <td><%= @wine_oenologists.each do |oenologist_assessment| %>
          <%= oenologist_assessment.grade %>
          <%= oenologist_assessment.oenologist.name.order("age ASC") %>
        <% end %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

